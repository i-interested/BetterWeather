<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/linearlayout_imageview_weather"
        android:layout_width="@dimen/layout_w_h_50dp"
        android:layout_height="@dimen/layout_w_h_50dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/linearlayout_textview_day"
        style="@style/AppTheme.WHWrapContent.GridViewTextView" />

    <TextView
        android:id="@+id/linearlayout_textview_temperature"
        style="@style/AppTheme.WHWrapContent.GridViewTextView" />

</LinearLayout>